CC = gcc
SRC = main.c holberton.c
OBJ = $(SRC:%.c=%.o)
NAME = holberton
RM = rm
TMP =  $(SRC:.c=.c~)


%.o: %.c
	$(CC)   -c -o $@ $<

all: $(OBJ)
	$(CC) $(OBJ) -o  $(NAME)
.PHONY:clean oclean fclean re

clean:
	$(RM) -f $(NAME)
	$(RM) -f $(TMP)
oclean:
	$(RM) -f $(OBJ)

fclean:
	$(RM) -f $(NAME)
	$(RM) -f $(TMP)
	$(RM) -f $(OBJ)

re: oclean $(OBJ) all